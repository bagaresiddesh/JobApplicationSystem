@model IEnumerable<JobApplicationSystem.DAL.Model.Education>

@{
    ViewData["Title"] = "Index";
}

<style>
    th { background-color: #260d33; color: white;}
    tr:nth-child(odd) {background-color: #f1d6ff;}
    td { border-bottom: 1px solid #372640;}
</style>

<h4>List of Qualification Details</h4>

<p>
    <a class="btn btn-primary btn-sm" asp-action="Admins" asp-controller="Admin">Back</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qualification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassingYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Percentage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qualification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassingYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Percentage)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
