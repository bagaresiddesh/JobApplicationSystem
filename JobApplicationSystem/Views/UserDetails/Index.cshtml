@model IEnumerable<JobApplicationSystem.DAL.Model.UserDetails>

@{
    ViewData["Title"] = "Index";
}

<h4>List of User Details</h4>
<label> Total Applications : </label>@ViewData["Total"]

<p>
    <a class="btn btn-primary btn-sm" asp-action="Admin" asp-controller="Home">Back</a>
    <a class="btn btn-primary btn-sm" asp-action="Index" asp-controller="UserDetails">Refresh</a>
</p>

<p>
    @using(@Html.BeginForm())
    {
        <label>Search for Name or Email</label>
        <input id="Search" name="Search" type="text"/>
        <input type="submit" class="btn-primary " value="Search"/>
    }    
    @using(@Html.BeginForm())
    {
        <label>Delete by Id</label>
        <input id="Delete" name="Delete" type="text"/>
        <input type="submit"  class="btn-primary" value="Delete" />
    }
    @using(@Html.BeginForm())
    {
        <label for="Gender">Gender :</label>
        <select id="gender" name="gender">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
        <input type=submit class="btn-primary">
    }

</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">
                @Html.DisplayNameFor(model => model.DateOfBirth)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>            
                @Html.DisplayFor(modelItem => item.DateOfBirth)                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |

                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
